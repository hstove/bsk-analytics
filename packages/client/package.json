{
  "name": "@blockstack/stats",
  "version": "0.3.0",
  "license": "MIT",
  "main": "dist/index.js",
  "description": "A client-side library for privacy-preserving analytics.",
  "typings": "dist/client/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "dev:watch": "tsdx watch --verbose --noClean",
