    "trailingComma": "es5"
  },
  "module": "dist/client.esm.js",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "husky": "^4.2.3",
    "jest-fetch-mock": "^3.0.1",
    "tsdx": "^0.12.3",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  },
  "publishConfig": {
    "access": "public"
  }
